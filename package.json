{
  "name": "makestuff",
  "version": "0.0.1",
  "description": "Tiny scaffolding tool for your project",
  "license": "MIT",
  "main": "dist/shell/shell.js",
  "scripts": {
    "dev": "tsc --watch --pretty",
    "build": "tsc",
    "test": "jest --watchAll",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@types/node": "7.0.18",
    "caporal": "0.5.0",
    "mkdirp": "0.5.1",
    "typescript": "2.3.2"
  },
  "devDependencies": {
    "@types/jest": "19.2.3",
    "jest": "20.0.0",
    "mock-fs": "4.3.0",
    "ts-jest": "20.0.1"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "author": {
    "name": "Alexandr Rodik",
    "email": "alexandr.rodik@gmail.com"
  },
  "keywords": [
    "scaffolding",
    "generator",
    "generate",
    "make",
    "create",
    "file"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arodik/makestuff.js.git"
  }
}
